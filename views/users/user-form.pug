extends ../layout

block content
    div(class="form-container")
        div(class="card")
            form(method="post" action="/users/signup")
                label(for="username") Username
                input(class="form-control" type="text" id="username" name="username" placeholder="Entrez votre nom")
                label(for="email") Email
                input(class="form-control" type="email" id="email" name="email" placeholder="Entrez votre email") 
                label(for="password") Password
                input(class="form-control" type="password" id="password" name="password" placeholder="Entrez votre mot de passe")
                button(type="submit" value="Envoyer") S'inscrire